	<artifactId>raw-report</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>ESB-Monitoring: raw-report</name>
	<properties>
		<topDirectoryLocation>.</topDirectoryLocation>
	</properties>

