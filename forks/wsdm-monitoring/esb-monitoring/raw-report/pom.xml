		</license>
	</licenses>
	<scm>
		<connection>scm:svn:svn+ssh://forge.ebmwebsourcing.com/svnroot/commons/trunk/commons-wsdl</connection>
		<developerConnection>scm:svn:svn+ssh://ofabre@forge.ebmwebsourcing.com/svnroot/commons/trunk/commons-wsdl</developerConnection>
	</scm>

	<!-- ========== -->
	<!-- Developers -->
	<!-- ========== -->
	<developers>
		<developer>
			<name>Nicolas Salatge</name>
			<id>nsalatge</id>
			<email>nicolas.salatge@ebmwebsourcing.com</email>
			<organization>EBM WebSourcing</organization>
			<roles>
				<role>Project manager</role>
				<role>Architect</role>
				<role>Developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>

	<dependencies>

		<dependency>
			<artifactId>easywsdl-schema</artifactId>
			<groupId>org.ow2.easywsdl</groupId>
			<version>2.0-SNAPSHOT</version>
		</dependency>

		<!-- test dependency -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>
		<plugins>

			<!-- RawReport Schema -->
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.7.0</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<schemaDirectory> ${basedir}/src/main/resources/schema
					</schemaDirectory>
					<schemaIncludes>
						<include>rawreport/rawReport.xsd</include>
					</schemaIncludes>
					<bindingIncludes>
						<include>binding.xjb</include>
					</bindingIncludes>
					<extension>true</extension>
					<plugins>
						<plugin>
							<groupId>org.jvnet.jaxb2_commons</groupId>
							<artifactId>basic</artifactId>
							<version>0.4.1.5</version>
						</plugin>
					</plugins>
					<args>
						<arg>-XtoString</arg>
						<arg>-Xequals</arg>
						<arg>-XhashCode</arg>
					</args>
				</configuration>
			</plugin>

	
		</plugins>
	</build>
</project>