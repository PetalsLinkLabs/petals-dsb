	<dependencies>

		<dependency>
			<groupId>org.ow2.petals.esb.monitoring</groupId>
			<artifactId>generic-notifier-server</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		
		<!-- WS Standard -->
		<dependency>
			<artifactId>ws-dm</artifactId>
			<groupId>com.ebmwebsourcing.wsstar</groupId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<artifactId>ws-notification-service</artifactId>
			<groupId>com.ebmwebsourcing.wsstar</groupId>
			<version>1.0-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<groupId>xerces</groupId>
					<artifactId>xercesImpl</artifactId>
				</exclusion>
				<exclusion>
					<artifactId>easywsdl-schema</artifactId>
					<groupId>org.ow2.easywsdl</groupId>
				</exclusion>
