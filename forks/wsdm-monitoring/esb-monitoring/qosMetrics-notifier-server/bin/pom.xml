		<!-- test dependency -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>



	</dependencies>
	<build>
		<plugins>

				<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>scripts</id>
						<phase>process-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo message="Copy script file" />
								<copy todir="./target/scripts" overwrite="yes"
									includeEmptyDirs="no">
									<fileset dir="./src/main/resources/scripts">
									</fileset>
								</copy>
								<echo message="Copy assembly file" />
								<copy todir="./target/assembly" overwrite="yes"
									includeEmptyDirs="no">
									<fileset dir="./src/main/resources/assembly">
									</fileset>
								</copy>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<finalName>server</finalName>
					<archive>
						<manifest>
							<mainClass>org.ow2.petals.qosmetrics.notifier.Main
							</mainClass>
							<addClasspath>true</addClasspath>
						</manifest>
						<!--						<manifestEntries>-->
						<!--							<Class-Path>../lib/esb-launcher-0.9.1-SNAPSHOT.jar -->
						<!--							../lib/esb-impl-0.9.1-SNAPSHOT.jar -->
						<!--							../lib/esb-kernel-impl-0.9.1-SNAPSHOT.jar -->
						<!--							../lib/esb-kernel-api-0.9.1-SNAPSHOT.jar</Class-Path>-->
						<!--						</manifestEntries>-->
					</archive>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>bugfix</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo message="Rename easy-wsdl 2.0-SNAPSHOT" />
								<move
									todir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
									<fileset
										dir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
										<include name="easywsdl-ext-wsdl4complexwsdl-2.0-*.jar" />
									</fileset>
									<mapper type="merge" from="easywsdl-ext-wsdl4complexwsdl-2.0-*.jar"
										to="easywsdl-ext-wsdl4complexwsdl-2.0-SNAPSHOT.jar" />
								</move>

								<move
									todir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
									<fileset
										dir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
										<include name="easywsdl-schema-2.0-*.jar" />
									</fileset>
									<mapper type="merge" from="easywsdl-schema-2.0-*.jar"
										to="easywsdl-schema-2.0-SNAPSHOT.jar" />
								</move>

								<move
									todir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
									<fileset
										dir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
										<include name="easywsdl-wsdl-2.0-*.jar" />
									</fileset>
									<mapper type="merge" from="easywsdl-wsdl-2.0-*.jar"
										to="easywsdl-wsdl-2.0-SNAPSHOT.jar" />
								</move>
							</tasks>
						</configuration>
					</execution>

				</executions>
			</plugin>

		</plugins>
	</build>
	<profiles>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<version>2.2-beta-3</version>
						<executions>
							<execution>
								<id>dev-assembly</id>
								<configuration>
									<appendAssemblyId>false</appendAssemblyId>
									<attach>false</attach>
									<descriptors>
