	<dependencies>
		
		<dependency>
			<groupId>org.ow2.petals.esb.monitoring</groupId>
			<artifactId>base-monitoring</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<groupId>org.ow2.petals.esb.monitoring</groupId>
			<artifactId>raw-report</artifactId>
