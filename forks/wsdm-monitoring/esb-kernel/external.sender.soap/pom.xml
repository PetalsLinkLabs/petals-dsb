			<!-- Copy fractal adl for test -->
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>process-test-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo message="Copy fractal adl in test" />
								<copy todir="src/test/resources" overwrite="yes"
									includeEmptyDirs="no">
									<fileset dir="./target/classes/">
										<exclude name="**/*.class" />
										<exclude name="**/*.cfg" />
										<exclude name="**/*.xsd" />
										<exclude name="**/*.xjb" />
									</fileset>
								</copy>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
