		<artifactId>esb-kernel-parent</artifactId>
		<groupId>org.ow2.petals.esb</groupId>
		<version>0.9.1-SNAPSHOT</version>
	</parent>

	<name>External Listener: SOAP</name>
	<artifactId>external.listener.soap</artifactId>
	<groupId>org.ow2.petals.esb</groupId>
	<version>0.9.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<properties>
		<topDirectoryLocation>..</topDirectoryLocation>
		<cxf.version>2.1.3</cxf.version>
	</properties>

