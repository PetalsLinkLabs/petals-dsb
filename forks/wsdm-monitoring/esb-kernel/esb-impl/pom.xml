			<!-- Copy fractal adl for test -->
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>bugfix</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo message="Rename easy-wsdl 2.0-SNAPSHOT" />
								<move
									todir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
									<fileset
										dir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
										<include name="easywsdl-ext-wsdl4complexwsdl-2.0-*.jar" />
									</fileset>
									<mapper type="merge" from="easywsdl-ext-wsdl4complexwsdl-2.0-*.jar"
										to="easywsdl-ext-wsdl4complexwsdl-2.0-SNAPSHOT.jar" />
								</move>

								<move
									todir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
									<fileset
										dir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
										<include name="easywsdl-schema-2.0-*.jar" />
									</fileset>
									<mapper type="merge" from="easywsdl-schema-2.0-*.jar"
										to="easywsdl-schema-2.0-SNAPSHOT.jar" />
								</move>

								<move
									todir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
									<fileset
										dir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
										<include name="easywsdl-wsdl-2.0-*.jar" />
									</fileset>
									<mapper type="merge" from="easywsdl-wsdl-2.0-*.jar"
										to="easywsdl-wsdl-2.0-SNAPSHOT.jar" />
								</move>

								<echo message="Rename fractal-rmi 0.3.6-SNAPSHOT" />
								<move
									todir="/${project.build.directory}/${project.artifactId}-${version}/${project.artifactId}-${version}/bin/">
									<fileset
