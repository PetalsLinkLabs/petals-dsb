	<build>
		<plugins>


			<!-- SPOON FOR FRACLET PLUGIN -->
			<plugin>
				<groupId>net.sf.alchim</groupId>
				<artifactId>spoon-maven-plugin</artifactId>
				<version>0.7.1</version>
				<executions>
					<execution>
						<goals>
							<goal>recompile</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Copy fractal adl for test -->
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>fractal</id>
						<phase>process-test-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo message="Copy fractal adl in test" />
								<copy todir="src/test/resources" overwrite="yes"
									includeEmptyDirs="no">
									<fileset dir="./target/classes/">
										<exclude name="**/*.class" />
										<exclude name="**/*.cfg" />
										<exclude name="**/*.xsd" />
										<exclude name="**/*.xjb" />
									</fileset>
								</copy>
							</tasks>
						</configuration>
					</execution>

					<execution>
						<id>scripts</id>
						<phase>process-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo message="Copy script file" />
								<copy todir="./target/scripts" overwrite="yes"
									includeEmptyDirs="no">
									<fileset dir="../esb-launcher/src/main/resources/scripts">
									</fileset>
								</copy>
								<echo message="Copy assembly file" />
								<copy todir="./target/assembly" overwrite="yes"
									includeEmptyDirs="no">
									<fileset dir="../esb-launcher/src/main/resources/assembly">
									</fileset>
								</copy>
							</tasks>
						</configuration>
					</execution>

				</executions>
			</plugin>

